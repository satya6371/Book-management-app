<%- include("layout/header") %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <% if (message) { %>
          <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="closer"></button>
            <strong>
              <%= message.message %>
            </strong>
          </div>
          <% } %>
            <div class="table-responsive">
              <% if (books !='' ) { %>
                <table class="table table-striped text-center my-3 ">
                  <thead >
                    <tr class="table-dark">
                      <th>SL.No</th>
                      <th>Bookname</th>
                      <th>Authorname</th>
                      <th>Image</th>
                      <th>BookPdf</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% books.forEach((row,index)=> { %>
                      <tr>
                        <td>
                          <%= index %>
                        </td>
                        <td>
                          <%= row.BookTitle %>
                        </td>
                        <td>
                          <%= row.AuthorName %>
                        </td>
                        <td><img src="<%= row.Image %>" width="50" class="img-thumbnail" alt="book cover" /></td>
                          <td><a href="<%= row.BookPdf %>" target="_blank"> book </a></td>

                        <td>
                          <a href="/edit/<%= row._id %>" class="text-success"> <i
                              class="fas fa-edit fa-lg mx-1"></i></a>
                          <a href="/delete/<%= row._id %>" class="text-danger"> <i
                              class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
                <% }else { %>
                  <h1 class="text-center tex-secondary mt-5"> No Book found in Database</h1>
                  <% } %>
            </div>
      </div>
    </div>
  </div>

  <%- include("./layout/footer") %>